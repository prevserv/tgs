NODE_ENV=production
PORT=3001

# PostgreSQL connection (single source of truth)
DATABASE_URL=postgresql://user:password@localhost:5432/sistema_ponto

# Optional SSL settings
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true
# DB_CA_CERT=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----

# Required: use a long random secret (64+ chars)
JWT_SECRET=REPLACE_WITH_STRONG_RANDOM_SECRET
JWT_ISSUER=sistema-ponto-backend
JWT_AUDIENCE=sistema-ponto-app
JWT_EXPIRES_IN=8h

# Required in production: comma-separated list of allowed frontend origins
# Example: https://ponto.suaempresa.com,https://admin.suaempresa.com
CORS_ORIGINS=

# If behind proxy/load balancer, set according to infra:
# 1 (single proxy), true, or subnet string
TRUST_PROXY=1

# Security/limits
JSON_BODY_LIMIT=100kb
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=10
